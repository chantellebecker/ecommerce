<h1>Inventory</h1>

<div class="table-responsive">
	<table class="table table-bordered">
		<tr>
			<th>Name</th>
			<th>Quantity</th>
			<th>Description</th>
			<th>Price</th>
		</tr>
		<% @products.each do |product| %>
		<tr>
			<td><%= link_to product.name, product_path(product) %></td>
			<td><%= product.quantity %></td>
			<td><%= product.description %></td>
			<td><%= product.price %></td>
		</tr>
		<% end %>
	</table>
</div>
