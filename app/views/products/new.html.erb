<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.text_field :name, class: 'form-control', placeholder: 'Product Name', autofocus: true %>
  <%= f.text_field :description, class: 'form-control', placeholder: 'Product Description' %>
  <div class='form-horizontal'>
    <%= f.label 'Inventory', class: 'col-sm-2' %>
    <%= f.number_field :quantity, class: 'form-control', placeholder: 10, class: 'col-sm-2' %>
  </div>
  <br />
  <br />
  <div class='form-horzontal'>
    <%= f.label :price, class: 'col-sm-2' %>
    <%= f.number_field :price, class: 'form-control', placeholder: 10.00, class: 'col-sm-2', step: 0.01 %><br />
  </div>
  <%= f.submit %>
<% end %>
